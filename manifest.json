{
  "manifest_version": 2,

  "name": "Kodutoo3",
  "version": "0.1.0",
  "description": "Projekt extension",
  "permissions": [
          "*://*/*",
		  "identity"
        ],
  "content_scripts": [ {
    "css": ["styles.css"],
    "js": ["firebase.js", "content.js", "drag.js"],
    "matches": ["http://*/*","https://*/*" ]
  } ],
	"web_accessible_resources": [
		"templates/*",
		"firebase.js"
	  ],
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"

}
